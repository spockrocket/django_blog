{% extends "blog_base.html" %}

{% block title %}{{ section }}{% endblock %}

{% block content %}

<!-- Main -->
			<article id="main">
				<div id="navtime">
					<h2><p>Blog description</p></h2>
					<p>tagline and shit...</p>
					{% include "nav.html" %}
				</div>
					
				<!-- One -->
					<section class="wrapper style4 container">
					
						<div class="row oneandhalf">
							<div class="8u">
								
								<!-- Latest Content -->
									<div class="content">
										<section>
											<header>
												<h3><a href="/blog/{{post.id}}">{{ last.title }}</a><</h3>
												<div class = "post_meta">
													Published by: {{ last.author }} on {{ last.pubDate }}
												</div>
											</header>
											<div class = "post_body">
												{{ last.body|safe|linebreaks }}
											</div>
											<div class="tags">
												{% for tag in last.tags.all %}
												<a href="/blog/tag/{{tag}}">{{ tag }}</a>
												{% if not forloop.last %}, {% endif %}
												{% endfor %}
											</div>
										</section>
									</div>
	
							</div>
							<div class="4u">
								
							<!-- Sidebar -->
								<div class="sidebar">
									{% for post in post_list %}
										<section>
											<header>
												<h3>{{ post.title }}</h3>
											</header>
											<div class = "post_body">
