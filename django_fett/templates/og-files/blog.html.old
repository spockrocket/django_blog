											</div>
											<div class="tags">
												{% for tag in post.tags.all %}
												<a href="/blog/tag/{{tag}}">{{ tag }}</a>
												{% if not forloop.last %}, {% endif %}
												{% endfor %}
											</div>
											<footer>
												<ul class="buttons">
													<li><a href=""/blog/{{post.id}}"" class="button small">Read More</a></li>
												</ul>
											</footer>
										</section>
									{% endfor %}
								</div>
							</div>
						</div>					
					</section>

